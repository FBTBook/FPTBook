@model LoginFPTBook.Data.ApplicationUser;

@{
    ViewData["Title"] = "updateAccount";
}

<style>
    h2{
        padding-top: 5px;
    }
    #updateAccountForm{
        padding-left: 150px;
        padding-right: 150px;
    }
    .btnUpdate{
        display: flex;
        text-align: center;
    }
</style>

<div class="row">
    <div class="container">
        <form id="updateAccountForm" method="post" asp-controller="Account" 
        asp-action="updateAccount" asp-route-idUser="@Model.Id">
            <h2>Update Account</h2>
            <button  asp-controller="Account" asp-action="Index" class="w-10 btn btn-lg btn-primary">Back to Index</button>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input  class="form-control" aria-required="true" asp-for="Id" readonly/>
                <label>USerID</label>
                <span  class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input  class="form-control" aria-required="true" asp-for="User_Fullname" readonly/>
                <label >FullName</label>
                <span  class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input  class="form-control" aria-required="true" value='@TempData["role"]' readonly/>
                <label >Role</label>
                <span  class="text-danger"></span>
            </div>
            <br>
         
            <div class="form-group">
                <label asp-for="User_Status" class="control-label"></label><br>
                @if(Model.User_Status == 1){
                    <input type="radio" id="contactChoice1" value="1" asp-for="User_Status" name="status" checked/>
                    <label for="contactChoice1">Available</label>
                    <input type="radio" id="contactChoice2" value="0" asp-for="User_Status" name="status"/>
                    <label for="contactChoice2">Unavailable</label>
                }else{
                    <input type="radio" id="contactChoice1" value="1" asp-for="User_Status" name="status"/>
                    <label for="contactChoice1">Available</label>
                    <input type="radio" id="contactChoice2" value="0" asp-for="User_Status" name="status" checked/>
                    <label for="contactChoice2">Unavailable</label>
                }
            </div>
            <br>
            
             <div class="btnUpdate">
                <button id="updateSubmit" type="submit" class="w-10 btn btn-lg btn-primary">Update</button>
             </div>              
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}